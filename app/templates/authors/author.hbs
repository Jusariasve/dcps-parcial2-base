{{outlet}}
<p>
<strong>{{model.username}}</strong></p>
<img src="{{model.profilePicture}}" alt="">
<p><strong>First name: </strong>{{model.firstName}}</p>
<p><strong>Last name: </strong>{{model.lastName}}</p>
<p><strong>Email: </strong>{{model.email}}</p>

<p><strong>Posts: </strong></p>

{{#if model.posts}}
<table class="table">
  <thead>
    <tr>
    <th>title</th>
    <th>Published date</th>
    <th>Content</th>
    </tr>
  </thead>
  <tbody>

    {{#each model.posts as |blogPost|}}
      <tr>
      <td>
        <p><button {{action 'deletePost' blogPost}}> Delete Post</button> {{blogPost.title}}</p>
      </td>
      <td>{{blogPost.publishedAt}}</td>
      <td>{{blogPost.content}}</td>
      </tr>
    {{/each}}

  </tbody>
</table>

{{else}}
  <p>This author dont have posts</p>
{{/if}}
